.container-lg.mt-5
  .w-100
    .col-12.col-md-6.p-3.bg-light.rounded.mx-sm-auto.p-1.p-md-5
      %h2.text-center.mb-3 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :email, class: "mb-1"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3", required: true
        .field
          = f.label :password, class: "mb-1"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "form-control mb-3", required: true
        .field
          = f.label :password_confirmation, class: "mb-1"
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3", required: true
        .actions
          = f.submit "Sign up", class: "my-3 btn btn-primary w-100"
      .text-center
        = render "devise/shared/links"
