%div{class: "d-flex gap-2 min-vh-100", style: "background-color: rgb(240, 240, 240);"}
    %div{class: "w-25 p-3", style: "background-color: rgb(255, 255, 255);"}
        = render "filters"

    %div{class: "w-75 p-3 d-flex flex-column gap-1"}
        - @tasks.each do |task|
            %div{class: "mb-2 p-2 rounded", style: "background-color: rgb(255, 255, 255);"}
                %p.badge{ class: "text-wrap mt-1 w-100 #{active_check(task)}" }= task.status
                .d-flex.justify-content-between
                    .d-flex.gap-2
                        %h5= task.title
                        %p.badge{ class: "text-wrap.mt-1 #{priority_color(task)}" }= task.priority
                    %div.d-flex.gap-2
                        = link_to "Edit", edit_task_path(task), class: "btn btn-outline-secondary"
                        = button_to "Delete", task_path(task), method: :delete, class: "btn btn-outline-danger",
                        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }
                %p= task.description
                %p= task.due_date.strftime("%d %b %Y")
                .d-flex.align-items-center
                    .container-lg
                        .row.row-cols-1.row-cols-sm-2.row-cols-md-3
                            - display_images(task)
                    - see_all(task)