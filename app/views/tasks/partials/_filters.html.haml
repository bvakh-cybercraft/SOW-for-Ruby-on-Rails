= form_tag tasks_path, method: :get do
    %div.form-group.align-items-center
        %h3 Filters
        %div.col.mt-2
            = label_tag :by_status, "Status"
            = select_tag :by_status, options_for_select(Task.statuses.map { |k, v| [k, k] }, params[:by_status]), include_blank: "Select", class: "form-control"
        %div.col.mt-2
            = label_tag :by_priority, "Priority"
            = select_tag :by_priority, options_for_select(Task.priorities.map { |k, v| [k, k] }, params[:by_priority]), include_blank: "Select", class: "form-control"
        %div.col.mt-2
            = submit_tag "Filter", class: "btn btn-primary w-100"