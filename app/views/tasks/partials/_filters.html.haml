= form_tag tasks_path, method: :get do
    %div
        %div
        = label_tag :by_status, "Status"
        = select_tag :by_status, options_for_select(Task.statuses.map { |k, v| [k, k] }, params[:by_status]), include_blank: "Select"
        = label_tag :by_priority, "Priority"
        = select_tag :by_priority, options_for_select(Task.priorities.map { |k, v| [k, k] }, params[:by_priority]), include_blank: "Select"
        = submit_tag "Filter"