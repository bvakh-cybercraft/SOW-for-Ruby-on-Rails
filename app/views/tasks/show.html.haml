%h1= @task.title
%p= @task.description
%p= @task.due_date
%p= @task.status
%p= @task.priority
- @task.images.each do |image|
    = image_tag image, width: "100px"

= link_to "Edit", edit_task_path(@task)

= button_to "Delete", task_path(@task), method: :delete, 
    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }